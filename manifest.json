{
  "manifest_version": 3,
  "name": "MyMories-GlyphTranslator",
  "version": "2.0.0",
  "description": "Bidirectional translation between natural language and civilisational glyph grammar. Based on Austin Moraski's symbolic compression system.",
  "author": "Sean Uddin / Metafintek",
  
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "Glyph Translator"
  },
  
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  
  "permissions": [
    "storage"
  ],
  
  "web_accessible_resources": [
    {
      "resources": ["lib/glyph-dictionary.json"],
      "matches": ["<all_urls>"]
    }
  ]
}
